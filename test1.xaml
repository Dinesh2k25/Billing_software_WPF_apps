<Window x:Class="BS.test1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BS"
        mc:Ignorable="d"
        Title="test1" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal"
                        HorizontalAlignment="Center" Margin="0,10">
                <Button Content="🖨 Print" Click="Print_Click" Width="100" Margin="5"/>
                <Button Content="✖ Close" Click="Close_Click" Width="100" Margin="5"/>
            </StackPanel>

            <DocumentViewer x:Name="BillViewer" Margin="10"/>
        </DockPanel>
    </Grid>
</Window>